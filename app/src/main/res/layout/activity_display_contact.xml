<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayContact"
    android:background="#f5f5f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photoandname"
        android:paddingBottom="15dp"
        android:layout_marginBottom="7dp"
        android:background="#ffffff">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/photo"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="25dp"
            android:textColor="#555"
            android:id="@+id/name"
            android:layout_below="@+id/photo"
            android:layout_centerHorizontal="true"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photoandname"
        android:id="@+id/cellnodiv">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="#aaa"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/cellnolabel"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            android:layout_below="@+id/cellnolabel"
            android:textColor="#000"
            android:id="@+id/cellno"
            android:layout_marginLeft="25dp">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cellnodiv"
        android:paddingTop="10dp"
        android:id="@+id/emaildiv"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#aaa"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/emaillabel"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Name"
            android:textSize="15dp"
            android:textColor="#000"
            android:id="@+id/email"
            android:layout_below="@+id/emaillabel"
            android:layout_marginLeft="25dp">
        </TextView>
    </RelativeLayout>

</RelativeLayout>